<RadzenHeader>
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
        <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
        <RadzenLabel Text="Cinema App" Style="margin-right: 5px" />
        <RadzenButton Text="Add Screening" ButtonStyle="ButtonStyle.Secondary"/>
    </RadzenStack>
</RadzenHeader>
<RadzenSidebar @bind-Expanded="@sidebar1Expanded">
    <RadzenPanelMenu>
        <RadzenPanelMenuItem Text="Home" Icon="home" Path="/"/>
        <RadzenPanelMenuItem Text="Screenings" Icon="@("<i class=\"fa-solid fa-film\"></i>")" Path="/screenings"/>
    </RadzenPanelMenu>
</RadzenSidebar>

@code {
    bool sidebar1Expanded = true;
}